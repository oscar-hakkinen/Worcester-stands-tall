<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "mob.app.dev.storage"
        versionCode = "1"
        version   = "1.0.0">

    <name>Worcester Stands Tall Mobile Application</name>

    <description>
       An application for researched and built for the worcester stands tall event to interact with the giraffe art statues to show additional information of them.
    </description>

    <author href="worcester.ac.uk" email="hako1_15@uni.worc.ac.uk">
        university of worcester
    </author>

    <access origin="*"/>
    <!--gives access to network-->
   	<plugin name="cordova-plugin-whitelist" version="1" />
 
    <!--Android 6.0 or newer: Plugin to support runtime permissions--> 
    <plugin name="cordova-plugin-geolocation-android-activator" />
    
    <!--Plugin to support gathering of location data--> 
    <plugin name="cordova-plugin-geolocation"  />
    <!--Apple iOS 10 or newer: Adding a parameter to the ios build to allow suer to give permission to access location-->
    <config-file platform="ios" parent="NSLocationWhenInUseUsageDescription" mode="merge">
        <array>
            <key>NSLocationWhenInUseUsageDescription</key>
            <string>Give me your location! Let me have it!!!</string>
        </array>
    </config-file>
    
    
    <preference name="phonegap-version" value="cli-7.0.1" />
	
    <preference name="permissions"                value="none"/>   
	
	<access origin="*"/>
   	<plugin name="cordova-plugin-whitelist" version="1" />
</widget>






  
